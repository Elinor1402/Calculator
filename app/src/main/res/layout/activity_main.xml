<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98FB98"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:background="@android:color/system_accent2_0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="263dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:text="TextView"
            android:textSize="58sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_weight="0.5"
            android:backgroundTint="#5BBDB3"
            android:backgroundTintMode="add"
            android:gravity="center"
            android:text="TextView"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/slash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:backgroundTint="#5BBDB3"
            android:backgroundTintMode="screen"
            android:onClick="funcOperator"
            android:text="/"
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/open_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:backgroundTint="#5BBDB3"
            android:backgroundTintMode="screen"
            android:onClick="funcCalc"
            android:text="("
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/close_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:backgroundTint="#5BBDB3"
            android:backgroundTintMode="screen"
            android:onClick="funcCalc"
            android:text=")"
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/remainder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:backgroundTint="#5BBDB3"
            android:backgroundTintMode="screen"
            android:onClick="funcOperator"
            android:text="%"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="44sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/asterisk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:backgroundTint="#5BBDB3"
            android:backgroundTintMode="screen"
            android:onClick="funcOperator"
            android:text="*"
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/seven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="funcCalc"
            android:text="7"
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="funcCalc"
            android:text="8"
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="funcCalc"
            android:text="9"
            android:textColor="#000000"
            android:textSize="44sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:backgroundTint="#5BBDB3"
            android:backgroundTintMode="screen"
            android:onClick="funcOperator"
            android:text="+"
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="funcCalc"
            android:text="4"
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="funcCalc"
            android:text="5"
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="funcCalc"
            android:text="6"
            android:textColor="#000000"
            android:textSize="44sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:backgroundTint="#5BBDB3"
            android:backgroundTintMode="screen"
            android:onClick="funcOperator"
            android:text="-"
            android:textColor="#000000"
            android:textSize="44sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="funcCalc"
            android:text="1"
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="funcCalc"
            android:text="2"
            android:textColor="#1E1D1D"
            android:textSize="44sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="funcCalc"
            android:text="3"
            android:textColor="#000000"
            android:textSize="44sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:orientation="horizontal">

        <Button
            android:id="@+id/del"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:backgroundTint="#021577"
            android:onClick="funcCalc"
            android:text="Del"
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="funcCalc"
            android:text="0"
            android:textColor="#000000"
            android:textSize="44sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.7"
            android:width="0dp"
            android:background="@drawable/buttondesign"
            android:onClick="funcCalc"
            android:text="="
            android:textColor="#000000"
            android:textSize="44sp" />
    </LinearLayout>
</LinearLayout>